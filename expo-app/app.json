{
  "expo": {
    "name": "FaceFortune AI 관상",
    "slug": "facefortune-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a1a"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "관상 분석을 위해 사진 접근이 필요합니다.",
          "cameraPermission": "관상 분석을 위해 카메라 접근이 필요합니다."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "관상 분석을 위해 카메라 접근이 필요합니다."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.facefortune.ai",
      "infoPlist": {
        "NSCameraUsageDescription": "관상 분석을 위해 카메라 접근이 필요합니다.",
        "NSPhotoLibraryUsageDescription": "관상 분석을 위해 갤러리 접근이 필요합니다.",
        "NSPhotoLibraryAddUsageDescription": "분석 결과를 저장하기 위해 갤러리 접근이 필요합니다."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a1a"
      },
      "package": "com.facefortune.ai",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "owner": "insushim",
    "extra": {
      "eas": {
        "projectId": "23a074a3-81d3-428a-96b5-e449298d032f"
      }
    }
  }
}
